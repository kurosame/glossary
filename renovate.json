{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Tokyo)", "schedule:daily"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    }
  ]
}
