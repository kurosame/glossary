{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": { "@/*": ["src/*"] },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/unit/specs/**/*.spec.ts",
    "test/unit/specs/**/*.spec.tsx"
  ],
  "exclude": ["node_modules"]
}
