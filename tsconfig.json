{
  "compilerOptions": {
    // Basic
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "sourceMap": true,
    // Strict Type Checks
    "strict": true,
    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Module Resolution
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Advanced
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/unit/specs/**/*.spec.ts",
    "test/unit/specs/**/*.spec.tsx"
  ],
  "exclude": ["node_modules"]
}
