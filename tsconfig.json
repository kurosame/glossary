{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015", "dom", "webworker"],
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/unit/specs/**/*.spec.ts", "test/unit/specs/**/*.spec.tsx"],
  "exclude": ["node_modules"]
}
