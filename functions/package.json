{
  "name": "glossary-functions",
  "private": true,
  "main": "lib/src/index.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
