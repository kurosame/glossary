  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "dependencies": {
    "firebase-admin": "9.4.2",
    "firebase-functions": "3.6.0"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "eslint": "7.4.0",
    "firebase-functions-test": "0.2.1",
    "firebase-tools": "8.16.2",
    "husky": "4.3.7",
    "jest": "25.5.4",
    "lint-staged": "10.2.11",
    "ts-jest": "25.4.0",
    "typescript": "3.8.3"
  }
}
